          rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        nav{
            background-color: rgb(63,101,212);
            position: fixed; 
            top: 0; 
            width:100%;
        }
        .custom-button {
            display: inline-block;
            padding: 10px 20px;
            border: 2px solid white;
            color: white;
            text-decoration: none;
            transition: background-color 0.3s ease;
            border-radius: 30px;
        }

            .custom-button:hover {
                background-color: white;
                color: black;
                text-decoration: none;
                border-color: white;
            }
            .cont{
                position:absolute;
            background-image: url(https://images.unsplash.com/photo-1493238792000-8113da705763?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);
            backdrop-filter:drop-shadow(0 5px 10px black);
            padding-bottom:200px;
            }
            footer{
                position:relative;
                top:800px;
            }
    </style>
</head>
<body>
    <!--Navigation bar-->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="@Url.Action("Homepage", "Home")">AutoComp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Homepage", "Home")">Trang chủ</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        So sánh xe
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("Choice2", "Home")"> 2 xe</a>
                        <a class="dropdown-item" href="@Url.Action("Choice3", "Home")"> 3 xe</a>
                        <a class="dropdown-item" href="@Url.Action("Choice4", "Home")"> 4 xe</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="cont">
        <div style="padding-top:300px; width:80%; margin-left:20px" >
            <span class="font-weight-bold" style="font-size:50px; color:white">AutoComp là một công cụ giúp bạn thực hiện việc so sánh các thông số về kĩ thuật của xe, từ đó khiến các quyết định mua xe của bạn trở nên dễ dàng hơn</span>
             <br />
            <a href="@Url.Action("Choice4", "Home")" class="custom-button" style="font-size:20px">Thực hiện so sánh</a>
        </div>
    </div>
    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2023 So sánh ô tô</p>
    </footer>
