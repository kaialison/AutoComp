@model IEnumerable<demo3.Models.Xse>
@{
    Layout = null;
    demo3.Models.XehoifinalContext db = new demo3.Models.XehoifinalContext();
    List<demo3.Models.Xse> list = new List<demo3.Models.Xse>();
    var q = from a in db.Xses
            select a;
    list = q.ToList();
}

<!DOCTYPE html>
<style>
    /*    body {
                padding-top: 70px;
            }*/

    .container {
        margin-top: 20px;
    }

    .table thead {
        background-color: #007bff;
        color: #fff;
    }

    .table td, .table th {
        text-align: center;
        min-width: 10vw;
    }
</style>
<html>
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="position: fixed; top: 0; width:100%; margin-bottom:100px;">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Admin Dashboard</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Trang chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Them", "Home")">Thêm</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Thongke", "Home")">Biểu đồ thống kê</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Home")">Đăng xuất</a>
                </li>

            </ul>
        </div>
    </nav>

    <div>
        <form id="dataForm" action="/admin/Home/Tim" method="get">
            <div class="search-form" style="margin: 70px 0 10px 10px;display:flex">
                <input name="tenhang" style="width:75%" type="text" id="tenhang" class="search-input form-control" placeholder="Nhập tên hãng xe cần tìm">
                <button type="submit" id="search-button" class="search-button btn btn-primary">Tìm kiếm</button>
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Phiên bản</th>
                    <th>Hãng sản xuất</th>
                    <th>Loại xe</th>
                    <th>Phân khúc</th>
                    <th>Kiểu động cơ</th>
                    <th>Hộp số</th>
                    <th>Dung tích</th>
                    <th>Công suất</th>
                    <th>Mômen</th>
                    <th>Số chỗ ngồi</th>
                    <th>
                        Kích thước
                        <br />(mm)
                    </th>
                    <th>
                        Chiều dài cơ sở
                        <br />(mm)
                    </th>
                    <th>
                        Khoảng sáng gầm
                        <br />(mm)
                    </th>
                    <th>Số túi khí</th>
                    <th>
                        Giá tham khảo
                        <br /> (VND)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink("Sửa", "Sua", new { maxe = item.Maxe})

                            @Html.ActionLink("Xóa", "Xoa", new { maxe = item.Maxe}, new { onclick = "return confirmDelete();" })
                        </td>
                        @*<td><a href="/admin/Home/Sua/@item.Maxe">Sửa</a></td>
                    <td><a href="/admin/Home/Xoa/@item.Maxe">Xóa</a></td>*@
                        <td>@item.Phienban</td>
                        <td>@item.Tenhang</td>
                        <td>@item.Loaixe</td>
                        <td>@item.Phankhuc</td>
                        <td>@item.Kieudongco</td>
                        <td>@item.Hopso</td>
                        <td>@item.Dungtich</td>
                        <td>@item.Congsuat</td>
                        <td>@item.Momen</td>
                        <td>@item.Soghe</td>
                        <td>@item.Kickthuoc</td>
                        <td>@item.Cieudaicoso</td>
                        <td>@item.Khoangsanggam</td>
                        <td>@item.Sotuikhi</td>
                        <td>@item.Giathamkhao.000.000</td>
                    </tr>
                }
                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </div>
    <script>
        function confirmDelete() {
            return confirm("Xác nhận: Bạn có chắc muốn xóa phần tử này không?");
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
</html>
